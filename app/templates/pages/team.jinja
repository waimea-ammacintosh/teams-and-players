{#=====================================================
  Thing page
  - Shows details of a single thing
  - Has a delete link to remove it
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Flask Demo - Single Thing

{% endblock %}


{% block content %}

    <h1>{{ players.team_name }}.</h1>


    <article>

        <header>
            <h3>{{ players.team_name }}</h3>
        </header>
    </article>

    <article>
        <h3>Players</h3>
        {% for player in players %}
        <p><strong>{{ players.player_name }}</strong>  - {{ players.player_notes }}</p>
        {% endfor %}
    </article>

    <article>
        <h3>Website</h3>
        <p><a href="#"> <strong>{{ players.team_website }}</strong></a></p>
    </article>



    <a role="button" href="/">Back to Home</a>

{% endblock %}

